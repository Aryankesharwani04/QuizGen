# Security
SECRET_KEY=django-insecure-your-secret-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# Set to True to use MySQL, False for SQLite
USE_MYSQL=False

# MySQL Database Settings (Required if USE_MYSQL=True)
DB_ENGINE=django.db.backends.mysql
DB_NAME=quizgen_prod
DB_USER=quizgen_user
DB_PASSWORD=your_mysql_password
DB_HOST=127.0.0.1
DB_PORT=3306

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id

# Email Settings
# Set to True to use SMTP (Gmail), False for Console Backend
EMAIL_USE_SMTP=False
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password
DEFAULT_FROM_EMAIL=noreply@quizgen.local
